@model UserManagement.EntityLayer.DataEntity.tblUserDetail
@{
    ViewBag.Title = "AddUser";
}

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-3">
            <h2 class="text-center">Add or Edit User</h2>

            @using (@Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <table class="table table-striped  table-bordered">
                    <tr>
                        <th>Name: </th>
                        <td>@Html.EditorFor(model => model.Name, new { @class = "form-control" })</td>
                        <td>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "alert-danger" })</td>
                    </tr>
                    <tr>
                        <th>Email: </th>
                        <td>@Html.EditorFor(model => model.Email)</td>
                        <td>@Html.ValidationMessageFor(model => model.Email, "", new { @class = "alert-danger" })</td>
                    </tr>
                    <tr>
                        <th>Phone: </th>
                        <td>@Html.EditorFor(model => model.Phone)</td>
                        <td>@Html.ValidationMessageFor(model => model.Phone, "", new { @class = "alert-danger" })</td>
                    </tr>
                    <tr>
                        <th>Birthdate: </th>
                        <td>@Html.EditorFor(model => model.Birthdate)</td>
                        <td>@Html.ValidationMessageFor(model => model.Birthdate, "", new { @class = "alert-danger" })</td>
                    </tr>
                    <tr>
                        <th>Gender: </th>
                        <td>@Html.EditorFor(model => model.Gender)</td>
                        <td>@Html.ValidationMessageFor(model => model.Gender, "", new { @class = "alert-danger" })</td>
                    </tr>
                </table>
                <div>
                    <input type="submit" value="Submit" class="btn btn-success" />
                </div>

            }

        </div>
        <div class="col-md-3"></div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>